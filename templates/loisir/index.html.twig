{% extends "base.html.twig" %}
{% block title %}{{ website }}{% endblock %}
{% block body %}
   <h1>Liste des {{ website }}</h1>
 
  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Seance</th>
      <th scope="col">Lieux</th>
      <th scope="col">Date</th>
      <th scope="col">Categorie</th>
    </tr>
  </thead>
  {% for loisir in loisirs %}
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>{{ loisir.name }}</td>
      <td>{{ loisir.adresse }}</td>
      <td>{{ loisir.date}}</td>
      <td>{{ loisir.category.name }}</td>
       <td></div>
				<a href="{{ path("loisir_show", { id: loisir.id }) }}" class="btn btn-primary m-4 p-1">Participer</a>
				</div></td>
    </tr>
    
  </tbody>
  {% endfor %}
</table>
     
  
{% endblock %}